---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import CategoryHeader from '@/components/CategoryHeader.astro';
import ProjectGrid from '@/components/ProjectGrid.astro';
import { sortProjectsByDate } from '@/lib/utils';

const projects = await getCollection('projects', ({ data }) => data.category === 'Woodworking');
const sortedProjects = sortProjectsByDate(projects);
---

<Layout title="Woodworking | Cardo Tisler">
  <CategoryHeader
    title="Woodworking"
    description="Custom furniture, shelving, and wooden creations. Each piece designed and built from scratch."
    projectCount={sortedProjects.length}
  />

  <section class="pb-24 px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
      <ProjectGrid
        projects={sortedProjects}
        emptyMessage="Woodworking projects coming soon."
      />
    </div>
  </section>
</Layout>
