---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import CategoryHeader from '@/components/CategoryHeader.astro';
import ProjectGrid from '@/components/ProjectGrid.astro';
import { sortProjectsByDate } from '@/lib/utils';

const projects = await getCollection('projects', ({ data }) => data.category === 'Garden');
const sortedProjects = sortProjectsByDate(projects);
---

<Layout title="Garden | Cardo Tisler">
  <CategoryHeader
    title="Garden"
    description="Outdoor structures, raised beds, and landscape features. Bringing life to outdoor spaces."
    projectCount={sortedProjects.length}
  />

  <section class="pb-24 px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
      <ProjectGrid
        projects={sortedProjects}
        emptyMessage="Garden projects coming soon."
      />
    </div>
  </section>
</Layout>
