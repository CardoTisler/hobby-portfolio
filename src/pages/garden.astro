  <CategoryHeader
    title="Garden"
    description="Outdoor structures and growing spaces. Working with nature, not against it."
    projectCount={sortedProjects.length}
  />

  <section class="pb-24 px-8 lg:px-12">
    <div class="max-w-6xl mx-auto">
      <ProjectGrid
        projects={sortedProjects}
        emptyMessage="Coming soon."
      />
    </div>
  </section>
</Layout>
