---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import CategoryHeader from '@/components/CategoryHeader.astro';
import ProjectGrid from '@/components/ProjectGrid.astro';
import { sortProjectsByDate } from '@/lib/utils';

const projects = await getCollection('projects', ({ data }) => data.category === 'Renovation');
const sortedProjects = sortProjectsByDate(projects);
---

<Layout title="Renovation | Cardo Tisler">
  <CategoryHeader
    title="Renovation"
    description="Room transformations and home improvements. From concept to completion, making spaces better."
    projectCount={sortedProjects.length}
  />

  <section class="pb-20 px-6 lg:px-8">
    <div class="max-w-6xl mx-auto">
      <ProjectGrid
        projects={sortedProjects}
        emptyMessage="Renovation projects coming soon."
      />
    </div>
  </section>
</Layout>
