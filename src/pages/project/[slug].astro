---
import { getCollection, render } from 'astro:content';
import { Image } from 'astro:assets';
import Layout from '@/layouts/Layout.astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.id },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await render(project);

const allProjects = await getCollection('projects');
const relatedProjects = allProjects
  .filter((p) => p.data.category === project.data.category && p.id !== project.id)
  .slice(0, 2);

const categoryIcons: Record<string, string> = {
  Woodworking: 'ü™µ',
  Renovation: 'üè†',
  Garden: 'üå±',
  Other: '‚ú®',
};
---

<Layout title={`${project.data.title} | Cardo Tisler`}>
  <article class="pt-28 pb-20">
    <!-- Header -->
    <div class="px-6 lg:px-8 mb-10">
      <div class="max-w-6xl mx-auto">
        <!-- Back link -->
        <a
          href="/"
          class="inline-flex items-center gap-2 text-clay hover:text-forest transition-colors duration-300 mb-8 animate-fade-in"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          <span class="text-sm">Back to projects</span>
        </a>

        <div class="animate-fade-up">
          <!-- Category badge -->
          <a
            href={`/${project.data.category.toLowerCase()}`}
            class="inline-flex items-center gap-2 px-4 py-2 bg-cream border border-sand rounded-full text-sm mb-4 hover:border-forest transition-colors"
          >
            <span>{categoryIcons[project.data.category] || '‚ú®'}</span>
            <span class="text-bark font-medium">{project.data.category}</span>
          </a>

          <h1 class="font-display text-4xl sm:text-5xl lg:text-6xl text-walnut mb-4">
            {project.data.title}
          </h1>

          {project.data.date && (
            <p class="text-clay">
              Completed in {project.data.date.toLocaleDateString('en-US', {
                month: 'long',
                year: 'numeric',
              })}
            </p>
          )}
        </div>
      </div>
    </div>

    <!-- Main image -->
    <div class="px-6 lg:px-8 mb-12">
      <div class="max-w-6xl mx-auto">
        <div class="relative rounded-2xl overflow-hidden animate-scale-in delay-200">
          <Image
            src={project.data.thumbnail}
            alt={project.data.title}
            width={1400}
            height={900}
            class="w-full aspect-[16/10] object-cover"
          />
        </div>
      </div>
    </div>

    <!-- Content -->
    <div class="px-6 lg:px-8">
      <div class="max-w-6xl mx-auto">
        <div class="grid lg:grid-cols-12 gap-12">
          <!-- Main content -->
          <div class="lg:col-span-8">
            <div class="prose prose-lg prose-walnut prose-p:text-bark prose-p:font-light prose-p:leading-relaxed prose-headings:font-display prose-headings:text-walnut prose-a:text-forest prose-a:no-underline hover:prose-a:underline max-w-none">
              <Content />
            </div>

            <!-- Additional images -->
            {project.data.images && project.data.images.length > 0 && (
              <div class="mt-12">
                <h3 class="font-display text-2xl text-walnut mb-6">More Photos</h3>
                <div class="grid sm:grid-cols-2 gap-4">
                  {project.data.images.map((image, index) => (
                    <div class="rounded-xl overflow-hidden">
                      <Image
                        src={image}
                        alt={`${project.data.title} - Image ${index + 1}`}
                        width={600}
                        height={450}
                        class="w-full aspect-[4/3] object-cover hover:scale-105 transition-transform duration-500"
                      />
                    </div>
                  ))}
                </div>
              </div>
            )}
          </div>

          <!-- Sidebar -->
          <aside class="lg:col-span-4">
            <div class="sticky top-28 space-y-6">
              <!-- Project details card -->
              <div class="p-6 bg-cream rounded-2xl border border-sand">
                <h3 class="text-sm font-semibold tracking-wider uppercase text-clay mb-5">
                  Project Details
                </h3>

                <dl class="space-y-4">
                  <div class="flex justify-between items-center py-3 border-b border-sand">
                    <dt class="text-clay">Category</dt>
                    <dd class="text-walnut font-medium flex items-center gap-2">
                      <span>{categoryIcons[project.data.category]}</span>
                      {project.data.category}
                    </dd>
                  </div>
                  {project.data.date && (
                    <div class="flex justify-between items-center py-3 border-b border-sand">
                      <dt class="text-clay">Completed</dt>
                      <dd class="text-walnut font-medium">
                        {project.data.date.toLocaleDateString('en-US', {
                          month: 'short',
                          year: 'numeric',
                        })}
                      </dd>
                    </div>
                  )}
                </dl>
              </div>

              <!-- Related projects -->
              {relatedProjects.length > 0 && (
                <div class="p-6 bg-cream rounded-2xl border border-sand">
                  <h3 class="text-sm font-semibold tracking-wider uppercase text-clay mb-5">
                    Related Projects
                  </h3>
                  <div class="space-y-4">
                    {relatedProjects.map((related) => (
                      <a
                        href={`/project/${related.id}`}
                        class="group flex items-center gap-4 p-2 -m-2 rounded-xl hover:bg-parchment transition-colors duration-300"
                      >
                        <Image
                          src={related.data.thumbnail}
                          alt={related.data.title}
                          width={80}
                          height={60}
                          class="w-16 h-12 object-cover rounded-lg"
                        />
                        <div>
                          <h4 class="text-walnut font-medium group-hover:text-forest transition-colors duration-300">
                            {related.data.title}
                          </h4>
                          <span class="text-clay text-sm">{related.data.category}</span>
                        </div>
                      </a>
                    ))}
                  </div>
                </div>
              )}
            </div>
          </aside>
        </div>
      </div>
    </div>
  </article>
</Layout>
