---
import { getCollection, render } from 'astro:content';
import { Image } from 'astro:assets';
import Layout from '@/layouts/Layout.astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.id },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await render(project);

const allProjects = await getCollection('projects');
const relatedProjects = allProjects
  .filter((p) => p.data.category === project.data.category && p.id !== project.id)
  .slice(0, 2);
---

<Layout title={`${project.data.title} — Cardo Tisler`}>
  <article class="pt-32 pb-24">
    <!-- Header -->
    <div class="px-8 lg:px-12 mb-16">
      <div class="max-w-6xl mx-auto">
        <!-- Back link -->
        <a
          href="/"
          class="inline-flex items-center gap-3 text-drift hover:text-ink transition-colors duration-300 mb-12 animate-fade-in"
        >
          <span class="w-6 h-px bg-clay"></span>
          <span class="text-sm tracking-wide">Back</span>
        </a>

        <div class="max-w-3xl animate-fade-up">
          <span class="text-drift text-sm tracking-widest uppercase">
            {project.data.category}
          </span>

          <h1 class="mt-4 font-display text-5xl sm:text-6xl text-charcoal tracking-tight">
            {project.data.title}
          </h1>

          {project.data.date && (
            <p class="mt-6 text-drift">
              {project.data.date.toLocaleDateString('en-US', {
                month: 'long',
                year: 'numeric',
              })}
            </p>
          )}
        </div>
      </div>
    </div>

    <!-- Main image -->
    <div class="px-8 lg:px-12 mb-20">
      <div class="max-w-6xl mx-auto">
        <div class="animate-scale-in delay-200">
          <Image
            src={project.data.thumbnail}
            alt={project.data.title}
            width={1400}
            height={900}
            class="w-full aspect-[16/10] object-cover"
          />
        </div>
      </div>
    </div>

    <!-- Content -->
    <div class="px-8 lg:px-12">
      <div class="max-w-6xl mx-auto">
        <div class="grid lg:grid-cols-12 gap-16">
          <!-- Main content -->
          <div class="lg:col-span-7">
            <div class="prose prose-lg prose-neutral prose-p:text-drift prose-p:font-light prose-p:leading-relaxed prose-headings:font-display prose-headings:text-charcoal prose-headings:font-normal prose-a:text-ink prose-a:no-underline hover:prose-a:underline max-w-none">
              <Content />
            </div>

            <!-- Additional images -->
            {project.data.images && project.data.images.length > 0 && (
              <div class="mt-20">
                <div class="grid gap-8">
                  {project.data.images.map((image, index) => (
                    <Image
                      src={image}
                      alt={`${project.data.title} — ${index + 1}`}
                      width={800}
                      height={600}
                      class="w-full object-cover"
                    />
                  ))}
                </div>
              </div>
            )}
          </div>

          <!-- Sidebar -->
          <aside class="lg:col-span-4 lg:col-start-9">
            <div class="sticky top-32 space-y-12">
              <!-- Details -->
              <div>
                <h3 class="text-sm tracking-widest uppercase text-drift mb-6">
                  Details
                </h3>
                <dl class="space-y-4">
                  <div class="flex justify-between py-3 border-b border-stone">
                    <dt class="text-drift">Category</dt>
                    <dd class="text-ink">{project.data.category}</dd>
                  </div>
                  {project.data.date && (
                    <div class="flex justify-between py-3 border-b border-stone">
                      <dt class="text-drift">Year</dt>
                      <dd class="text-ink">
                        {project.data.date.toLocaleDateString('en-US', { year: 'numeric' })}
                      </dd>
                    </div>
                  )}
                </dl>
              </div>

              <!-- Related -->
              {relatedProjects.length > 0 && (
                <div>
                  <h3 class="text-sm tracking-widest uppercase text-drift mb-6">
                    Related
                  </h3>
                  <div class="space-y-6">
                    {relatedProjects.map((related) => (
                      <a
                        href={`/project/${related.id}`}
                        class="group block"
                      >
                        <span class="text-ink group-hover:text-charcoal transition-colors duration-300">
                          {related.data.title}
                        </span>
                      </a>
                    ))}
                  </div>
                </div>
              )}
            </div>
          </aside>
        </div>
      </div>
    </div>
  </article>
</Layout>
