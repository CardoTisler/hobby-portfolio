---
import { getCollection, render } from 'astro:content';
import { Image } from 'astro:assets';
import Layout from '@/layouts/Layout.astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.id },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await render(project);

const allProjects = await getCollection('projects');
const currentIndex = allProjects.findIndex((p) => p.id === project.id);
const relatedProjects = allProjects
  .filter((p) => p.data.category === project.data.category && p.id !== project.id)
  .slice(0, 2);

// Generate drawing number
const drawingNum = String(currentIndex + 1).padStart(3, '0');
---

<Layout title={`${project.data.title} — Cardo Tisler`}>
  <article class="pt-28 pb-24">
    <!-- Header -->
    <div class="px-8 lg:px-12 mb-12 bg-aged/30 pb-12">
      <div class="max-w-6xl mx-auto">
        <!-- Back link -->
        <a
          href="/"
          class="inline-flex items-center gap-3 text-faded hover:text-navy transition-colors duration-300 mb-8 pt-4 animate-fade-in group"
        >
          <svg class="w-4 h-4 transform group-hover:-translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path d="M19 12H5M12 19l-7-7 7-7"/>
          </svg>
          <span class="text-xs font-label tracking-widest uppercase">Back to Index</span>
        </a>

        <!-- Title block -->
        <div class="animate-fade-up blueprint-box p-6 lg:p-8 bg-paper">
          <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-6">
            <div>
              <div class="flex items-center gap-4 mb-4">
                <span class="tech-label">{project.data.category}</span>
                <span class="text-light-ink">|</span>
                <span class="text-[10px] font-body text-light-ink">DWG-{drawingNum}</span>
              </div>

              <h1 class="font-display text-4xl sm:text-5xl text-navy tracking-tight">
                {project.data.title}
              </h1>

              {project.data.date && (
                <p class="mt-4 text-faded text-sm">
                  Completed: {project.data.date.toLocaleDateString('en-US', {
                    month: 'long',
                    year: 'numeric',
                  })}
                </p>
              )}
            </div>

            <div class="flex items-center gap-4 lg:flex-shrink-0">
              <div class="stamp text-rust border-rust">
                Complete
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Main image -->
    <div class="px-8 lg:px-12 mb-16">
      <div class="max-w-6xl mx-auto">
        <div class="animate-fade-up delay-200 corner-marks">
          <div class="blueprint-box p-4 bg-aged/30">
            <Image
              src={project.data.thumbnail}
              alt={project.data.title}
              width={1400}
              height={900}
              class="w-full aspect-[16/10] object-cover border border-light-ink/30"
            />
            <!-- Image caption bar -->
            <div class="mt-3 flex items-center justify-between text-[10px] font-body text-light-ink">
              <span>FIG. 1 — Primary View</span>
              <span>Scale: NTS</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Content -->
    <div class="px-8 lg:px-12">
      <div class="max-w-6xl mx-auto">
        <div class="grid lg:grid-cols-12 gap-12">
          <!-- Main content -->
          <div class="lg:col-span-7">
            <div class="blueprint-box p-6 lg:p-8 bg-paper">
              <div class="tech-label mb-6">Project Description</div>

              <div class="prose prose-sm max-w-none
                prose-p:text-faded prose-p:leading-relaxed prose-p:font-body
                prose-headings:font-display prose-headings:text-navy prose-headings:font-normal
                prose-a:text-ink prose-a:no-underline hover:prose-a:underline
                prose-strong:text-navy prose-strong:font-medium">
                <Content />
              </div>
            </div>

            <!-- Additional images -->
            {project.data.images && project.data.images.length > 0 && (
              <div class="mt-12">
                <div class="tech-label mb-6">Additional Documentation</div>
                <div class="grid gap-6">
                  {project.data.images.map((image, index) => (
                    <div class="blueprint-box p-4 bg-aged/30">
                      <Image
                        src={image}
                        alt={`${project.data.title} — Detail ${index + 1}`}
                        width={800}
                        height={600}
                        class="w-full object-cover border border-light-ink/30"
                      />
                      <div class="mt-3 text-[10px] font-body text-light-ink">
                        FIG. {index + 2} — Detail View
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            )}
          </div>

          <!-- Sidebar -->
          <aside class="lg:col-span-4 lg:col-start-9">
            <div class="sticky top-24 space-y-8">
              <!-- Specifications -->
              <div class="blueprint-box p-6 bg-aged/50">
                <div class="tech-label mb-6">Specifications</div>
                <dl class="space-y-4">
                  <div class="flex justify-between py-2 border-b border-light-ink/30">
                    <dt class="text-faded text-sm">Category</dt>
                    <dd class="text-navy font-medium">{project.data.category}</dd>
                  </div>
                  {project.data.date && (
                    <div class="flex justify-between py-2 border-b border-light-ink/30">
                      <dt class="text-faded text-sm">Year</dt>
                      <dd class="text-navy font-medium">
                        {project.data.date.toLocaleDateString('en-US', { year: 'numeric' })}
                      </dd>
                    </div>
                  )}
                  <div class="flex justify-between py-2 border-b border-light-ink/30">
                    <dt class="text-faded text-sm">Drawing No.</dt>
                    <dd class="text-navy font-medium">DWG-{drawingNum}</dd>
                  </div>
                  <div class="flex justify-between py-2">
                    <dt class="text-faded text-sm">Status</dt>
                    <dd class="stamp text-rust border-rust text-[8px] px-2 py-0.5">
                      Archived
                    </dd>
                  </div>
                </dl>
              </div>

              <!-- Related drawings -->
              {relatedProjects.length > 0 && (
                <div class="blueprint-box p-6 bg-paper">
                  <div class="tech-label mb-6">Related Drawings</div>
                  <div class="space-y-4">
                    {relatedProjects.map((related) => (
                      <a
                        href={`/project/${related.id}`}
                        class="group block py-3 border-b border-light-ink/30 last:border-0"
                      >
                        <span class="text-navy group-hover:text-ink transition-colors duration-300 font-display">
                          {related.data.title}
                        </span>
                        <div class="mt-1 flex items-center gap-2 text-faded">
                          <span class="text-[10px] font-label">VIEW</span>
                          <svg class="w-3 h-3 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path d="M5 12h14M12 5l7 7-7 7"/>
                          </svg>
                        </div>
                      </a>
                    ))}
                  </div>
                </div>
              )}
            </div>
          </aside>
        </div>
      </div>
    </div>
  </article>
</Layout>
