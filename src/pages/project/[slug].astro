---
import { getCollection, render } from 'astro:content';
import { Image } from 'astro:assets';
import Layout from '@/layouts/Layout.astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.id },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await render(project);

const allProjects = await getCollection('projects');
const relatedProjects = allProjects
  .filter((p) => p.data.category === project.data.category && p.id !== project.id)
  .slice(0, 2);
---

<Layout title={`${project.data.title} — Cardo Tisler`}>
  <article class="pt-32 pb-24">
    <!-- Header -->
    <div class="px-8 lg:px-12 mb-16">
      <div class="max-w-5xl mx-auto">
        <!-- Back link -->
        <a
          href="/"
          class="inline-flex items-center gap-3 text-stone hover:text-bark transition-colors duration-300 mb-12 animate-fade-in group"
        >
          <span class="w-6 h-px bg-clay group-hover:w-10 transition-all duration-300"></span>
          <span class="text-sm">Back</span>
        </a>

        <!-- Title area - asymmetric -->
        <div class="grid lg:grid-cols-12 gap-8 items-end">
          <div class="lg:col-span-8 animate-fade-up">
            <span class="natural-label block mb-4">
              {project.data.category}
            </span>

            <h1 class="font-display text-5xl sm:text-6xl text-bark tracking-tight leading-[1.1]">
              {project.data.title}
            </h1>
          </div>

          <div class="lg:col-span-4 lg:text-right animate-fade-up delay-100">
            {project.data.date && (
              <p class="text-drift">
                {project.data.date.toLocaleDateString('en-US', {
                  month: 'long',
                  year: 'numeric',
                })}
              </p>
            )}
          </div>
        </div>

        <div class="mt-12 organic-line"></div>
      </div>
    </div>

    <!-- Main image -->
    <div class="px-8 lg:px-12 mb-20">
      <div class="max-w-5xl mx-auto">
        <div class="animate-fade-up delay-200 wabi-frame">
          <Image
            src={project.data.thumbnail}
            alt={project.data.title}
            width={1200}
            height={800}
            class="w-full aspect-[3/2] object-cover"
          />
        </div>
      </div>
    </div>

    <!-- Content -->
    <div class="px-8 lg:px-12">
      <div class="max-w-5xl mx-auto">
        <div class="grid lg:grid-cols-12 gap-16">
          <!-- Main content -->
          <div class="lg:col-span-7">
            <div class="prose prose-lg max-w-none
              prose-p:text-drift prose-p:leading-relaxed
              prose-headings:font-display prose-headings:text-bark prose-headings:font-normal
              prose-a:text-terra prose-a:no-underline hover:prose-a:underline
              prose-strong:text-bark prose-strong:font-medium">
              <Content />
            </div>

            <!-- Additional images -->
            {project.data.images && project.data.images.length > 0 && (
              <div class="mt-20 space-y-8">
                {project.data.images.map((image, index) => (
                  <div class="animate-fade-up" style={`animation-delay: ${(index + 1) * 100}ms`}>
                    <Image
                      src={image}
                      alt={`${project.data.title} — ${index + 1}`}
                      width={800}
                      height={600}
                      class="w-full object-cover"
                    />
                  </div>
                ))}
              </div>
            )}
          </div>

          <!-- Sidebar -->
          <aside class="lg:col-span-4 lg:col-start-9">
            <div class="sticky top-32 space-y-12">
              <!-- Details -->
              <div>
                <h3 class="natural-label mb-6">
                  Details
                </h3>
                <dl class="space-y-4">
                  <div class="flex justify-between py-3 border-b border-sand">
                    <dt class="text-stone">Category</dt>
                    <dd class="text-bark">{project.data.category}</dd>
                  </div>
                  {project.data.date && (
                    <div class="flex justify-between py-3 border-b border-sand">
                      <dt class="text-stone">Year</dt>
                      <dd class="text-bark">
                        {project.data.date.toLocaleDateString('en-US', { year: 'numeric' })}
                      </dd>
                    </div>
                  )}
                </dl>
              </div>

              <!-- Related -->
              {relatedProjects.length > 0 && (
                <div>
                  <h3 class="natural-label mb-6">
                    Related
                  </h3>
                  <div class="space-y-4">
                    {relatedProjects.map((related) => (
                      <a
                        href={`/project/${related.id}`}
                        class="group block py-3 border-b border-sand"
                      >
                        <span class="font-display text-lg text-bark group-hover:text-terra transition-colors duration-300">
                          {related.data.title}
                        </span>
                      </a>
                    ))}
                  </div>
                </div>
              )}

              <!-- Decorative -->
              <div class="pt-4">
                <div class="zen-dot"></div>
              </div>
            </div>
          </aside>
        </div>
      </div>
    </div>
  </article>
</Layout>
