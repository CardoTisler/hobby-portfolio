---
import { getCollection, render } from 'astro:content';
import { Image } from 'astro:assets';
import Layout from '@/layouts/Layout.astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.id },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await render(project);

const allProjects = await getCollection('projects');
const relatedProjects = allProjects
  .filter((p) => p.data.category === project.data.category && p.id !== project.id)
  .slice(0, 2);
---

<Layout title={`${project.data.title} — Cardo Tisler`}>
  <article class="pt-32 pb-24">
    <!-- Header -->
    <div class="px-8 lg:px-12 mb-12 bg-timber/30 pb-12">
      <div class="max-w-6xl mx-auto">
        <!-- Back link -->
        <a
          href="/"
          class="inline-flex items-center gap-3 text-smoke hover:text-copper transition-colors duration-300 mb-10 pt-4 animate-fade-in group"
        >
          <span class="w-6 h-0.5 bg-copper group-hover:w-10 transition-all duration-300"></span>
          <span class="text-sm tracking-wide">Back</span>
        </a>

        <!-- Title block -->
        <div class="hammered-border p-8 bg-charwood animate-fade-up">
          <div class="flex flex-col lg:flex-row lg:items-end lg:justify-between gap-6">
            <div>
              <div class="flex items-center gap-3 mb-4">
                <div class="forge-mark"></div>
                <span class="workshop-label">{project.data.category}</span>
              </div>

              <h1 class="font-display text-4xl sm:text-5xl text-bone tracking-wider">
                {project.data.title}
              </h1>

              {project.data.date && (
                <p class="mt-4 text-smoke">
                  {project.data.date.toLocaleDateString('en-US', {
                    month: 'long',
                    year: 'numeric',
                  })}
                </p>
              )}
            </div>

            <!-- Rivets -->
            <div class="flex items-center gap-3">
              <div class="rivet"></div>
              <div class="rivet"></div>
              <div class="rivet"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Main image -->
    <div class="px-8 lg:px-12 mb-16">
      <div class="max-w-6xl mx-auto">
        <div class="animate-fade-up delay-200 timber-card p-4">
          <Image
            src={project.data.thumbnail}
            alt={project.data.title}
            width={1400}
            height={900}
            class="w-full aspect-[16/10] object-cover"
          />
        </div>
      </div>
    </div>

    <!-- Content -->
    <div class="px-8 lg:px-12">
      <div class="max-w-6xl mx-auto">
        <div class="grid lg:grid-cols-12 gap-12">
          <!-- Main content -->
          <div class="lg:col-span-7">
            <div class="prose prose-lg max-w-none prose-invert
              prose-p:text-ash prose-p:leading-relaxed
              prose-headings:font-display prose-headings:text-bone prose-headings:font-normal prose-headings:tracking-wide
              prose-a:text-copper prose-a:no-underline hover:prose-a:underline
              prose-strong:text-bone prose-strong:font-medium">
              <Content />
            </div>

            <!-- Additional images -->
            {project.data.images && project.data.images.length > 0 && (
              <div class="mt-16 space-y-6">
                <div class="flex items-center gap-3 mb-6">
                  <div class="rivet"></div>
                  <span class="workshop-label">Additional Views</span>
                </div>
                {project.data.images.map((image, index) => (
                  <div class="timber-card p-4 animate-fade-up" style={`animation-delay: ${(index + 1) * 100}ms`}>
                    <Image
                      src={image}
                      alt={`${project.data.title} — ${index + 1}`}
                      width={800}
                      height={600}
                      class="w-full object-cover"
                    />
                  </div>
                ))}
              </div>
            )}
          </div>

          <!-- Sidebar -->
          <aside class="lg:col-span-4 lg:col-start-9">
            <div class="sticky top-32 space-y-8">
              <!-- Details -->
              <div class="hammered-border p-6 bg-timber/50">
                <div class="flex items-center gap-3 mb-6">
                  <div class="rivet"></div>
                  <span class="workshop-label">Details</span>
                </div>
                <dl class="space-y-4">
                  <div class="flex justify-between py-3 border-b border-walnut">
                    <dt class="text-smoke">Category</dt>
                    <dd class="text-bone">{project.data.category}</dd>
                  </div>
                  {project.data.date && (
                    <div class="flex justify-between py-3 border-b border-walnut">
                      <dt class="text-smoke">Year</dt>
                      <dd class="text-bone">
                        {project.data.date.toLocaleDateString('en-US', { year: 'numeric' })}
                      </dd>
                    </div>
                  )}
                  <div class="flex justify-between py-3">
                    <dt class="text-smoke">Status</dt>
                    <dd class="text-copper font-medium">Complete</dd>
                  </div>
                </dl>
              </div>

              <!-- Related -->
              {relatedProjects.length > 0 && (
                <div class="hammered-border p-6 bg-charwood">
                  <div class="flex items-center gap-3 mb-6">
                    <div class="rivet"></div>
                    <span class="workshop-label">Related Work</span>
                  </div>
                  <div class="space-y-4">
                    {relatedProjects.map((related) => (
                      <a
                        href={`/project/${related.id}`}
                        class="group block py-3 border-b border-walnut last:border-0"
                      >
                        <span class="font-display text-lg text-bone group-hover:text-copper transition-colors duration-300 tracking-wide">
                          {related.data.title}
                        </span>
                      </a>
                    ))}
                  </div>
                </div>
              )}
            </div>
          </aside>
        </div>
      </div>
    </div>
  </article>
</Layout>
