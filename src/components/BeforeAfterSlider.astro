---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  beforeImage: ImageMetadata;
  afterImage: ImageMetadata;
  title: string;
}

const { beforeImage, afterImage, title } = Astro.props;
---

<div class="before-after-slider" data-slider>
  <div class="slider-container">
    <!-- After image (background) -->
    <div class="after-image">
      <Image
        src={afterImage}
        alt={`${title} — After`}
        width={1200}
        height={800}
        class="slider-image"
      />
      <span class="image-label after-label">After</span>
    </div>

    <!-- Before image (foreground, clipped) -->
    <div class="before-image" data-before>
      <Image
        src={beforeImage}
        alt={`${title} — Before`}
        width={1200}
        height={800}
        class="slider-image"
      />
      <span class="image-label before-label">Before</span>
    </div>

    <!-- Slider handle -->
    <div class="slider-handle" data-handle>
      <div class="handle-line"></div>
      <div class="handle-grip">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </div>
    </div>
  </div>
</div>

<style>
  .before-after-slider {
    position: relative;
    overflow: hidden;
    border: 1px solid var(--color-walnut);
    background: var(--color-timber);
  }

  .slider-container {
    position: relative;
    aspect-ratio: 3/2;
    cursor: ew-resize;
    user-select: none;
  }

  .after-image,
  .before-image {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .before-image {
    clip-path: inset(0 50% 0 0);
  }

  .slider-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .image-label {
    position: absolute;
    bottom: 16px;
    padding: 6px 16px;
    background: var(--color-charwood);
    border: 1px solid var(--color-walnut);
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-bone);
  }

  .before-label {
    left: 16px;
  }

  .after-label {
    right: 16px;
  }

  .slider-handle {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    z-index: 10;
    pointer-events: none;
  }

  .handle-line {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(
      180deg,
      var(--color-copper) 0%,
      var(--color-brass) 50%,
      var(--color-copper) 100%
    );
    box-shadow: 0 0 8px rgba(184, 115, 51, 0.5);
  }

  .handle-grip {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0;
    width: 48px;
    height: 48px;
    background: var(--color-charwood);
    border: 2px solid var(--color-copper);
    border-radius: 50%;
    color: var(--color-copper);
    box-shadow:
      0 2px 8px rgba(0, 0, 0, 0.4),
      0 0 12px rgba(184, 115, 51, 0.3);
    pointer-events: auto;
  }

  .handle-grip svg {
    width: 16px;
    height: 16px;
    margin: -2px;
  }

  /* Active state */
  .before-after-slider.is-dragging .handle-grip {
    background: var(--color-copper);
    color: var(--color-charwood);
    transform: scale(1.1);
  }

  .before-after-slider.is-dragging {
    cursor: grabbing;
  }
</style>

<script>
  document.querySelectorAll('[data-slider]').forEach((slider) => {
    const container = slider.querySelector('.slider-container') as HTMLElement;
    const beforeImage = slider.querySelector('[data-before]') as HTMLElement;
    const handle = slider.querySelector('[data-handle]') as HTMLElement;

    let isDragging = false;

    const updatePosition = (x: number) => {
      const rect = container.getBoundingClientRect();
      const position = Math.max(0, Math.min(1, (x - rect.left) / rect.width));
      const percentage = position * 100;

      beforeImage.style.clipPath = `inset(0 ${100 - percentage}% 0 0)`;
      handle.style.left = `${percentage}%`;
    };

    const startDrag = (e: MouseEvent | TouchEvent) => {
      isDragging = true;
      slider.classList.add('is-dragging');

      const x = 'touches' in e ? e.touches[0].clientX : e.clientX;
      updatePosition(x);
    };

    const drag = (e: MouseEvent | TouchEvent) => {
      if (!isDragging) return;
      e.preventDefault();

      const x = 'touches' in e ? e.touches[0].clientX : e.clientX;
      updatePosition(x);
    };

    const endDrag = () => {
      isDragging = false;
      slider.classList.remove('is-dragging');
    };

    container.addEventListener('mousedown', startDrag);
    container.addEventListener('touchstart', startDrag, { passive: true });

    window.addEventListener('mousemove', drag);
    window.addEventListener('touchmove', drag, { passive: false });

    window.addEventListener('mouseup', endDrag);
    window.addEventListener('touchend', endDrag);
  });
</script>
