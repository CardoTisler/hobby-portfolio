---
const navLinks = [
  { href: '/woodworking', label: 'Woodworking' },
  { href: '/renovation', label: 'Renovation' },
  { href: '/garden', label: 'Garden' },
  { href: '/gallery', label: 'All Work' },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-rice/80 backdrop-blur-sm">
  <nav class="max-w-6xl mx-auto px-8 lg:px-12">
    <div class="flex items-center justify-between h-20">
      <!-- Logo - simple, understated -->
      <a href="/" class="animate-fade-in">
        <span class="font-display text-2xl text-charcoal tracking-wide">
          Cardo Tisler
        </span>
      </a>

      <!-- Desktop navigation - minimal -->
      <ul class="hidden md:flex items-center gap-12">
        {navLinks.map((link, index) => (
          <li class="animate-fade-in" style={`animation-delay: ${(index + 1) * 100}ms`}>
            <a
              href={link.href}
              class:list={[
                'ink-underline text-sm tracking-wide transition-colors duration-500',
                currentPath === link.href
                  ? 'text-charcoal'
                  : 'text-drift hover:text-ink',
              ]}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 text-ink"
        aria-label="Toggle menu"
      >
        <div class="w-6 h-5 flex flex-col justify-between" id="hamburger">
          <span class="w-full h-px bg-current transition-all duration-300 origin-center"></span>
          <span class="w-full h-px bg-current transition-all duration-300"></span>
          <span class="w-full h-px bg-current transition-all duration-300 origin-center"></span>
        </div>
      </button>
    </div>

    <!-- Mobile navigation -->
    <div id="mobile-menu" class="hidden md:hidden">
      <div class="py-8 border-t border-stone">
        <ul class="space-y-6">
          {navLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class:list={[
                  'block text-lg font-display tracking-wide transition-colors duration-300',
                  currentPath === link.href
                    ? 'text-charcoal'
                    : 'text-drift hover:text-ink',
                ]}
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </nav>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  const hamburger = document.getElementById('hamburger');
  let isOpen = false;

  btn?.addEventListener('click', () => {
    isOpen = !isOpen;
    menu?.classList.toggle('hidden');

    const spans = hamburger?.querySelectorAll('span');
    if (spans && isOpen) {
      spans[0].style.transform = 'translateY(8px) rotate(45deg)';
      spans[1].style.opacity = '0';
      spans[2].style.transform = 'translateY(-8px) rotate(-45deg)';
    } else if (spans) {
      spans[0].style.transform = '';
      spans[1].style.opacity = '1';
      spans[2].style.transform = '';
    }
  });
</script>
