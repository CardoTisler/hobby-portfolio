---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/woodworking', label: 'Woodworking' },
  { href: '/renovation', label: 'Renovation' },
  { href: '/garden', label: 'Garden' },
  { href: '/gallery', label: 'Gallery' },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50">
  <!-- Gradient fade background -->
  <div class="absolute inset-0 bg-gradient-to-b from-coal via-coal/95 to-transparent pointer-events-none"></div>

  <nav class="relative max-w-7xl mx-auto px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <a
        href="/"
        class="group flex items-center gap-3 animate-fade-in"
      >
        <span class="font-display text-2xl text-cream tracking-tight">
          Cardo Tisler
        </span>
        <span class="hidden sm:block w-8 h-px bg-gradient-to-r from-brass to-transparent group-hover:w-12 transition-all duration-500"></span>
      </a>

      <!-- Desktop navigation -->
      <ul class="hidden md:flex items-center gap-1">
        {navLinks.map((link, index) => (
          <li class="animate-fade-in" style={`animation-delay: ${(index + 1) * 100}ms`}>
            <a
              href={link.href}
              class:list={[
                'relative px-4 py-2 text-sm font-medium tracking-wide transition-colors duration-300',
                currentPath === link.href
                  ? 'text-brass'
                  : 'text-dust hover:text-cream',
              ]}
            >
              {link.label}
              {currentPath === link.href && (
                <span class="absolute bottom-0 left-4 right-4 h-px bg-brass"></span>
              )}
            </a>
          </li>
        ))}
      </ul>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden relative w-10 h-10 flex items-center justify-center text-cream"
        aria-label="Toggle menu"
      >
        <div class="relative w-5 h-4 flex flex-col justify-between" id="hamburger">
          <span class="w-full h-0.5 bg-current transition-transform duration-300 origin-center"></span>
          <span class="w-full h-0.5 bg-current transition-opacity duration-300"></span>
          <span class="w-full h-0.5 bg-current transition-transform duration-300 origin-center"></span>
        </div>
      </button>
    </div>

    <!-- Mobile navigation -->
    <div id="mobile-menu" class="hidden md:hidden">
      <div class="py-4 border-t border-stone/30">
        <ul class="space-y-1">
          {navLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class:list={[
                  'block py-3 px-2 text-lg font-light tracking-wide transition-colors duration-300 border-l-2',
                  currentPath === link.href
                    ? 'text-brass border-brass'
                    : 'text-dust hover:text-cream border-transparent hover:border-stone',
                ]}
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </nav>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  const hamburger = document.getElementById('hamburger');
  let isOpen = false;

  btn?.addEventListener('click', () => {
    isOpen = !isOpen;
    menu?.classList.toggle('hidden');

    // Animate hamburger to X
    const spans = hamburger?.querySelectorAll('span');
    if (spans && isOpen) {
      spans[0].style.transform = 'translateY(7px) rotate(45deg)';
      spans[1].style.opacity = '0';
      spans[2].style.transform = 'translateY(-7px) rotate(-45deg)';
    } else if (spans) {
      spans[0].style.transform = '';
      spans[1].style.opacity = '1';
      spans[2].style.transform = '';
    }
  });
</script>
