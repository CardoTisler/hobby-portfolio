---
const navLinks = [
  { href: '/woodworking', label: 'Woodworking' },
  { href: '/renovation', label: 'Renovation' },
  { href: '/garden', label: 'Garden' },
  { href: '/gallery', label: 'All Work' },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-timber/95 backdrop-blur-sm border-b border-walnut">
  <nav class="max-w-6xl mx-auto px-8 lg:px-12">
    <div class="flex items-center justify-between h-18">
      <!-- Logo with forge mark -->
      <a href="/" class="animate-fade-in group flex items-center gap-4">
        <div class="forge-mark"></div>
        <div>
          <span class="font-display text-xl text-bone tracking-wider">
            Cardo Tisler
          </span>
          <span class="block workshop-label text-[9px] mt-0.5">Craftsman</span>
        </div>
      </a>

      <!-- Desktop navigation -->
      <ul class="hidden md:flex items-center gap-8">
        {navLinks.map((link, index) => (
          <li class="animate-fade-in" style={`animation-delay: ${(index + 1) * 80}ms`}>
            <a
              href={link.href}
              class:list={[
                'copper-underline text-sm transition-colors duration-300',
                currentPath === link.href
                  ? 'text-copper'
                  : 'text-smoke hover:text-bone',
              ]}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 text-bone"
        aria-label="Toggle menu"
      >
        <div class="w-6 h-5 flex flex-col justify-between" id="hamburger">
          <span class="w-full h-0.5 bg-current transition-all duration-300 origin-center"></span>
          <span class="w-4 h-0.5 bg-copper transition-all duration-300 ml-auto"></span>
          <span class="w-full h-0.5 bg-current transition-all duration-300 origin-center"></span>
        </div>
      </button>
    </div>

    <!-- Mobile navigation -->
    <div id="mobile-menu" class="hidden md:hidden">
      <div class="py-6 border-t border-walnut">
        <ul class="space-y-4">
          {navLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class:list={[
                  'block py-2 font-display text-lg tracking-wide transition-colors duration-300',
                  currentPath === link.href
                    ? 'text-copper'
                    : 'text-smoke hover:text-bone',
                ]}
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </nav>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  const hamburger = document.getElementById('hamburger');
  let isOpen = false;

  btn?.addEventListener('click', () => {
    isOpen = !isOpen;
    menu?.classList.toggle('hidden');

    const spans = hamburger?.querySelectorAll('span');
    if (spans && isOpen) {
      spans[0].style.transform = 'translateY(9px) rotate(45deg)';
      spans[1].style.opacity = '0';
      spans[2].style.transform = 'translateY(-9px) rotate(-45deg)';
    } else if (spans) {
      spans[0].style.transform = '';
      spans[1].style.opacity = '1';
      spans[2].style.transform = '';
    }
  });
</script>
