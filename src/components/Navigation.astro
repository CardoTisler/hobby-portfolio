---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/woodworking', label: 'Woodworking' },
  { href: '/renovation', label: 'Renovation' },
  { href: '/garden', label: 'Garden' },
  { href: '/gallery', label: 'Gallery' },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50">
  <!-- Warm gradient background -->
  <div class="absolute inset-0 bg-gradient-to-b from-parchment via-parchment/98 to-parchment/0 pointer-events-none"></div>

  <nav class="relative max-w-6xl mx-auto px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <a
        href="/"
        class="group flex items-center gap-2 animate-fade-in"
      >
        <span class="text-forest text-xl">&#9752;</span>
        <span class="font-display text-xl text-walnut tracking-tight">
          Cardo Tisler
        </span>
      </a>

      <!-- Desktop navigation -->
      <ul class="hidden md:flex items-center gap-2">
        {navLinks.map((link, index) => (
          <li class="animate-fade-in" style={`animation-delay: ${(index + 1) * 80}ms`}>
            <a
              href={link.href}
              class:list={[
                'relative px-4 py-2 text-sm font-medium rounded-full transition-all duration-300',
                currentPath === link.href
                  ? 'bg-forest text-parchment'
                  : 'text-bark hover:bg-sand/50',
              ]}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden relative w-10 h-10 flex items-center justify-center text-walnut rounded-full hover:bg-sand/50 transition-colors"
        aria-label="Toggle menu"
      >
        <div class="relative w-5 h-4 flex flex-col justify-between" id="hamburger">
          <span class="w-full h-0.5 bg-current rounded-full transition-transform duration-300 origin-center"></span>
          <span class="w-full h-0.5 bg-current rounded-full transition-opacity duration-300"></span>
          <span class="w-full h-0.5 bg-current rounded-full transition-transform duration-300 origin-center"></span>
        </div>
      </button>
    </div>

    <!-- Mobile navigation -->
    <div id="mobile-menu" class="hidden md:hidden">
      <div class="py-4 border-t border-sand">
        <ul class="space-y-1">
          {navLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class:list={[
                  'block py-3 px-4 rounded-lg text-base font-medium transition-all duration-300',
                  currentPath === link.href
                    ? 'bg-forest text-parchment'
                    : 'text-bark hover:bg-sand/50',
                ]}
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </nav>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  const hamburger = document.getElementById('hamburger');
  let isOpen = false;

  btn?.addEventListener('click', () => {
    isOpen = !isOpen;
    menu?.classList.toggle('hidden');

    const spans = hamburger?.querySelectorAll('span');
    if (spans && isOpen) {
      spans[0].style.transform = 'translateY(7px) rotate(45deg)';
      spans[1].style.opacity = '0';
      spans[2].style.transform = 'translateY(-7px) rotate(-45deg)';
    } else if (spans) {
      spans[0].style.transform = '';
      spans[1].style.opacity = '1';
      spans[2].style.transform = '';
    }
  });
</script>
