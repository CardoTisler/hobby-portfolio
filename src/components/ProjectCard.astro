---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  category: string;
  thumbnail: ImageMetadata;
  slug: string;
}

const { title, category, thumbnail, slug } = Astro.props;
---

<a
  href={`/project/${slug}`}
  class="group block bg-dark-light rounded-lg overflow-hidden transition-transform hover:scale-[1.02]"
>
  <div class="aspect-[4/3] overflow-hidden">
    <Image
      src={thumbnail}
      alt={title}
      width={600}
      height={450}
      class="w-full h-full object-cover transition-transform group-hover:scale-105"
    />
  </div>
  <div class="p-4">
    <span class="text-gold text-xs font-medium uppercase tracking-wider">
      {category}
    </span>
    <h3 class="mt-1 text-lg font-semibold group-hover:text-gold transition-colors">
      {title}
    </h3>
    <p class="mt-2 text-sm text-gray-400">Click for more</p>
  </div>
</a>
