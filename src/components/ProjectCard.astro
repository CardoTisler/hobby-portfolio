---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  category: string;
  thumbnail: ImageMetadata;
  slug: string;
  index?: number;
}

const { title, category, thumbnail, slug, index = 0 } = Astro.props;
---

<a
  href={`/project/${slug}`}
  class="group block animate-fade-up"
  style={`animation-delay: ${index * 100}ms`}
>
  <article class="natural-card overflow-hidden">
    <!-- Image with wabi-frame on hover -->
    <div class="relative overflow-hidden">
      <div class="aspect-[4/3]">
        <Image
          src={thumbnail}
          alt={title}
          width={600}
          height={450}
          class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-[1.03]"
        />
      </div>

      <!-- Subtle overlay on hover -->
      <div class="absolute inset-0 bg-bark/0 group-hover:bg-bark/5 transition-colors duration-500"></div>
    </div>

    <!-- Content - minimal -->
    <div class="p-6">
      <span class="natural-label">
        {category}
      </span>
      <h3 class="mt-3 font-display text-xl text-bark group-hover:text-terra transition-colors duration-400 leading-snug">
        {title}
      </h3>
    </div>
  </article>
</a>
