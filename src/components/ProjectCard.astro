---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  category: string;
  thumbnail: ImageMetadata;
  slug: string;
  index?: number;
}

const { title, category, thumbnail, slug, index = 0 } = Astro.props;
---

<a
  href={`/project/${slug}`}
  class="group block animate-scale-in"
  style={`animation-delay: ${index * 100}ms`}
>
  <article class="hover-subtle">
    <!-- Image - clean, no borders -->
    <div class="aspect-[4/3] overflow-hidden bg-stone">
      <Image
        src={thumbnail}
        alt={title}
        width={600}
        height={450}
        class="w-full h-full object-cover transition-all duration-700 group-hover:scale-[1.02] group-hover:opacity-90"
      />
    </div>

    <!-- Minimal text below -->
    <div class="mt-6">
      <span class="text-drift text-xs tracking-widest uppercase">
        {category}
      </span>
      <h3 class="mt-2 font-display text-xl text-ink group-hover:text-charcoal transition-colors duration-500">
        {title}
      </h3>
    </div>
  </article>
</a>
