---
import type { CollectionEntry } from 'astro:content';
import ProjectCard from './ProjectCard.astro';

interface Props {
  projects: CollectionEntry<'projects'>[];
  emptyMessage?: string;
}

const { projects, emptyMessage = 'No projects yet.' } = Astro.props;
---

{projects.length > 0 ? (
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
    {projects.map((project, index) => (
      <ProjectCard
        title={project.data.title}
        category={project.data.category}
        thumbnail={project.data.thumbnail}
        slug={project.id}
        index={index}
      />
    ))}
  </div>
) : (
  <div class="blueprint-box p-12 text-center bg-aged/30">
    <div class="tech-label mb-4">Status</div>
    <p class="text-faded font-display text-xl italic">{emptyMessage}</p>
    <div class="stamp text-sepia border-sepia mt-6 inline-block">Pending</div>
  </div>
)}
