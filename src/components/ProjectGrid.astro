---
import type { CollectionEntry } from 'astro:content';
import ProjectCard from './ProjectCard.astro';

interface Props {
  projects: CollectionEntry<'projects'>[];
  emptyMessage?: string;
}

const { projects, emptyMessage = 'No projects yet.' } = Astro.props;
---

{projects.length > 0 ? (
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
    {projects.map((project, index) => (
      <ProjectCard
        title={project.data.title}
        category={project.data.category}
        thumbnail={project.data.thumbnail}
        slug={project.id}
        index={index}
      />
    ))}
  </div>
) : (
  <div class="py-16 text-center">
    <div class="inline-flex flex-col items-center gap-4 p-8 bg-cream rounded-2xl border border-sand">
      <span class="text-4xl">ðŸŒ¿</span>
      <p class="text-bark font-light">{emptyMessage}</p>
    </div>
  </div>
)}
