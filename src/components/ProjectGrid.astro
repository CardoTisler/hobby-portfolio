---
import type { CollectionEntry } from 'astro:content';
import ProjectCard from './ProjectCard.astro';

interface Props {
  projects: CollectionEntry<'projects'>[];
  emptyMessage?: string;
}

const { projects, emptyMessage = 'No projects yet.' } = Astro.props;
---

{projects.length > 0 ? (
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
    {projects.map((project, index) => (
      <ProjectCard
        title={project.data.title}
        category={project.data.category}
        thumbnail={project.data.thumbnail}
        slug={project.id}
        index={index}
      />
    ))}
  </div>
) : (
  <div class="hammered-border p-12 text-center bg-timber/30">
    <div class="forge-mark mx-auto mb-6"></div>
    <p class="text-smoke font-display text-xl tracking-wide">{emptyMessage}</p>
  </div>
)}
