---
import type { CollectionEntry } from 'astro:content';
import ProjectCard from './ProjectCard.astro';

interface Props {
  projects: CollectionEntry<'projects'>[];
  emptyMessage?: string;
}

const { projects, emptyMessage = 'No projects yet.' } = Astro.props;
---

{projects.length > 0 ? (
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
    {projects.map((project, index) => (
      <ProjectCard
        title={project.data.title}
        category={project.data.category}
        thumbnail={project.data.thumbnail}
        slug={project.id}
        index={index}
      />
    ))}
  </div>
) : (
  <div class="py-20 text-center">
    <div class="inline-flex flex-col items-center gap-4">
      <div class="w-16 h-16 border border-stone/30 flex items-center justify-center">
        <svg class="w-8 h-8 text-stone" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
        </svg>
      </div>
      <p class="text-dust font-light">{emptyMessage}</p>
    </div>
  </div>
)}
