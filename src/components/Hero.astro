<section class="min-h-[85vh] flex items-center pt-20">
  <div class="max-w-5xl mx-auto px-8 lg:px-12 py-20 w-full">
    <!-- Asymmetric layout - wabi-sabi influence -->
    <div class="grid lg:grid-cols-12 gap-16 items-end">
      <div class="lg:col-span-8">
        <!-- Main headline - generous space -->
        <div class="animate-fade-up">
          <h1 class="font-display text-5xl sm:text-6xl lg:text-7xl text-bark leading-[1.1] tracking-tight">
            Made with
            <br />
            <em class="text-stone">patience</em>
          </h1>
        </div>

        <!-- Description - understated -->
        <p class="animate-fade-up delay-200 mt-12 text-drift text-lg leading-relaxed max-w-md">
          Woodworking, renovation, and garden projects.
          Each piece shaped by hand, finished with intention.
        </p>

        <!-- Simple CTA -->
        <div class="animate-fade-up delay-300 mt-14">
          <a
            href="/gallery"
            class="inline-flex items-center gap-4 text-bark hover:text-terra transition-colors duration-400 group"
          >
            <span class="text-sm tracking-wide">View work</span>
            <span class="w-10 h-px bg-clay group-hover:w-16 group-hover:bg-terra transition-all duration-400"></span>
          </a>
        </div>
      </div>

      <!-- Decorative element - organic/zen -->
      <div class="lg:col-span-4 animate-fade-in delay-500">
        <div class="flex flex-col items-end gap-8">
          <div class="enso"></div>
          <div class="text-right">
            <p class="natural-label">Estonia</p>
            <p class="text-drift text-sm mt-1">Est. 2024</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Organic divider -->
    <div class="animate-fade-in delay-500 mt-24">
      <div class="organic-line"></div>
    </div>
  </div>
</section>
