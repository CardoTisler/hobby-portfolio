<section class="min-h-[90vh] flex items-center pt-20">
  <div class="max-w-6xl mx-auto px-8 lg:px-12 py-24 w-full">
    <div class="max-w-3xl">
      <!-- Simple, meditative headline -->
      <h1 class="animate-fade-up">
        <span class="block font-display text-5xl sm:text-6xl lg:text-7xl text-charcoal leading-[1.1] tracking-tight">
          Building with
        </span>
        <span class="block font-display text-5xl sm:text-6xl lg:text-7xl leading-[1.1] tracking-tight mt-2">
          <em class="text-drift">intention</em>
        </span>
      </h1>

      <!-- Minimal description -->
      <p class="animate-fade-up delay-200 mt-12 text-drift text-lg lg:text-xl font-light leading-relaxed max-w-lg">
        Woodworking, renovation, and garden projects.
        Each piece crafted with patience and care.
      </p>

      <!-- Simple link -->
      <div class="animate-fade-up delay-300 mt-16">
        <a
          href="/gallery"
          class="inline-flex items-center gap-4 text-ink hover:text-charcoal transition-colors duration-500 group"
        >
          <span class="text-sm tracking-widest uppercase">View work</span>
          <span class="w-12 h-px bg-clay group-hover:w-20 group-hover:bg-ink transition-all duration-500"></span>
        </a>
      </div>
    </div>

    <!-- Subtle decorative element -->
    <div class="animate-fade-in delay-500 mt-32 flex items-center gap-8">
      <div class="w-px h-16 bg-stone"></div>
      <span class="text-drift text-sm tracking-widest">Est. 2024</span>
    </div>
  </div>
</section>
