<section class="min-h-[90vh] flex items-center pt-20 relative overflow-hidden px-8 lg:px-12">
  <!-- Subtle forge glow in corner -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-gradient-radial from-ember/10 via-copper/5 to-transparent blur-3xl"></div>

  <div class="max-w-6xl mx-auto py-20 w-full relative">
    <div class="grid lg:grid-cols-12 gap-12 items-end">
      <div class="lg:col-span-8">
        <!-- Headline -->
        <div class="animate-fade-up">
          <h1 class="font-display text-5xl sm:text-6xl lg:text-7xl text-bone leading-[1.1] tracking-wide">
            Crafted with
            <span class="block text-copper mt-2">intention</span>
          </h1>
        </div>

        <!-- Description -->
        <p class="animate-fade-up delay-200 mt-10 text-smoke text-lg leading-relaxed max-w-lg">
          Woodworking, renovation, and garden projects.
          Shaped by hand. Built to last.
        </p>

        <!-- CTA -->
        <div class="animate-fade-up delay-300 mt-12">
          <a
            href="/gallery"
            class="group inline-flex items-center gap-4"
          >
            <span class="px-6 py-3 bg-timber border border-walnut text-bone text-sm tracking-wider uppercase transition-all duration-300 group-hover:border-copper group-hover:bg-walnut">
              View Work
            </span>
            <span class="w-8 h-0.5 bg-copper group-hover:w-12 transition-all duration-300"></span>
          </a>
        </div>
      </div>

      <!-- Decorative side panel -->
      <div class="lg:col-span-4 animate-fade-in delay-500">
        <div class="hammered-border p-6 bg-timber/50">
          <div class="flex items-center gap-3 mb-4">
            <div class="rivet"></div>
            <div class="rivet"></div>
            <div class="rivet"></div>
          </div>
          <div class="space-y-4">
            <div>
              <span class="workshop-label">Location</span>
              <p class="text-bone mt-1">Estonia</p>
            </div>
            <div>
              <span class="workshop-label">Established</span>
              <p class="text-bone mt-1">2024</p>
            </div>
            <div>
              <span class="workshop-label">Craft</span>
              <p class="text-bone mt-1">Wood & Home</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Copper accent line -->
    <div class="animate-fade-in delay-500 mt-20">
      <div class="copper-line max-w-md"></div>
    </div>
  </div>
</section>
