---
interface Props {
  title: string;
  description: string;
  projectCount: number;
}

const { title, description, projectCount } = Astro.props;
---

<div class="pt-32 pb-16 px-8 lg:px-12">
  <div class="max-w-6xl mx-auto">
    <!-- Back link -->
    <a
      href="/"
      class="inline-flex items-center gap-3 text-drift hover:text-ink transition-colors duration-300 mb-12 animate-fade-in"
    >
      <span class="w-6 h-px bg-clay"></span>
      <span class="text-sm tracking-wide">Back</span>
    </a>

    <div class="animate-fade-up">
      <h1 class="font-display text-5xl sm:text-6xl text-charcoal tracking-tight">
        {title}
      </h1>
      <p class="mt-6 text-drift text-lg font-light max-w-xl">
        {description}
      </p>

      <div class="mt-8 flex items-center gap-4">
        <span class="text-drift text-sm">{projectCount} {projectCount === 1 ? 'project' : 'projects'}</span>
      </div>
    </div>

    <!-- Simple line -->
    <div class="mt-16 w-24 h-px bg-clay"></div>
  </div>
</div>
