---
interface Props {
  title: string;
  description: string;
  projectCount: number;
}

const { title, description, projectCount } = Astro.props;
---

<div class="pt-32 pb-16 px-8 lg:px-12">
  <div class="max-w-5xl mx-auto">
    <!-- Back link - subtle -->
    <a
      href="/"
      class="inline-flex items-center gap-3 text-stone hover:text-bark transition-colors duration-300 mb-12 animate-fade-in group"
    >
      <span class="w-6 h-px bg-clay group-hover:w-10 transition-all duration-300"></span>
      <span class="text-sm">Back</span>
    </a>

    <!-- Title area - asymmetric -->
    <div class="grid lg:grid-cols-12 gap-8 items-end">
      <div class="lg:col-span-8 animate-fade-up">
        <h1 class="font-display text-5xl sm:text-6xl text-bark tracking-tight">
          {title}
        </h1>
        <p class="mt-6 text-drift leading-relaxed max-w-lg">
          {description}
        </p>
      </div>

      <div class="lg:col-span-4 lg:text-right animate-fade-up delay-200">
        <span class="natural-label">{projectCount} {projectCount === 1 ? 'project' : 'projects'}</span>
      </div>
    </div>

    <!-- Organic divider -->
    <div class="mt-12 organic-line"></div>
  </div>
</div>
